<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.NumbPad" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/Widget.NumbPad.ActionBar.Solid</item>
        <item name="android:alertDialogTheme">@style/Theme_NumbPad_Dialog_Alert</item>
        <item name="android:alertDialogStyle">@style/AlertDialog_NumbPad</item>
    </style>

    <style name="Theme_NumbPad_Dialog_Alert" parent="@style/Theme_Holo_Dialog_Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.NumbPad</item>
        <item name="android:textColorPrimary">@android:color/holo_orange_light</item>
        <item name="android:textColorAlertDialogListItem">@android:color/holo_orange_light</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.NumbPad.Medium</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.NumbPad.DialogWindowTitle</item>
        <item name="android:borderlessButtonStyle">@style/Widget.NumbPad.Button.Borderless.Small</item>
        <!--<item name="android:buttonBarStyle">@style/NumbPad.ButtonBar.AlertDialog</item>-->
    </style>

</resources>